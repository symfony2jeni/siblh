{% extends 'siblhmantenimientoBundle::plantilla.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
        <link href="{{ asset('bundles/siblhmantenimiento/css/form.css') }}" rel="stylesheet" type="text/css" />
 
{% endblock %}
{% block javascripts %}

{{parent()}}

<script type="text/javascript" src="{{ asset('bundles/siblhmantenimiento/js/BlhDonacion/edit.js') }}" ></script>
        
{% endblock %}

{% block body -%}
    <h1>Editar Donacion</h1>

     
    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}
    
     
<table align = "center" >
       
        <tr><td colspan=2 align = "left" height=10  ></td></tr>
        <tr style="visibility:hidden"><td align='left' ><font color="red">*</font>{{ form_label(edit_form.idDonante) }}</td><td align='left'>{{ form_widget(edit_form.idDonante) }}</td></tr>
        <tr><td colspan=2 align = "left" height=10  ></td></tr>
        <tr><td align='left' ><font color="red">*</font>{{ form_label(edit_form.fechaDonacion, 'Fecha Donacion') }}</td><td align='left'>{{ form_widget(edit_form.fechaDonacion,  { 'attr': {'title': 'Digite la fecha de la donacion ', 'required': 'true', 'readonly': 'true'} }) }}</td></tr>
        <tr><td colspan=2 align = "left" height=10  ></td></tr>
        <tr><td align = "left"><font color="red" >*</font><b><font face="Verdana,Arial,Helvetica,sans-serif" ><i>Responsable</i></font></b></td>      
        <td align = "left"> <select name="responsable" id = "responsable" > 
        <option value= ""></option>
        {% for responsable in responsable%}        
        <option value= "{{ responsable.nombre }}">{{ responsable.nombre }} </option>
          {% endfor %}</select> </td> </tr>
        <tr style="visibility:hidden"><td align='left' ><font color="red">*</font>{{ form_label(edit_form.responsableDonacion, 'Responsable') }}</td><td align='left'>{{ form_widget(edit_form.responsableDonacion) }}</td></tr>
        <tr><td colspan=2 align = "left" height=10  ></td></tr>
        <tr style="visibility:hidden"><td align='left' ><font color="red">*</font>{{ form_label(edit_form.idBancoDeLeche) }}</td><td align='left'>{{ form_widget(edit_form.idBancoDeLeche) }}</td></tr>
        <tr><td colspan=2 align = "left" height=10  ></td></tr>
        <tr><td align = "left"><font color="red" size = "2" face = "Comic Sans MS">* Campos requeridos</font></td> </tr>     
        <tr>
		<td style="visibility:hidden">{{ form_widget(edit_form.usuario, {'attr':{ 'value' : user_ID }}) }} </td>
		<td colspan = '3' align = 'center'>  <input type="submit" id= "button" value="Actualizar"/>
        <input id = "boton1" type="button" value="Regresar" onClick=' window.location.href="{{ path('blhdonacion') }}" '></td></tr>
  </table>
       
      {{ form_end(edit_form) }}
{% endblock %}
