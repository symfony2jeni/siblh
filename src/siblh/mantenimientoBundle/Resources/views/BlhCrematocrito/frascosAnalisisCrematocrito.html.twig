{% extends 'siblhmantenimientoBundle::plantilla.html.twig' %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{ asset('bundles/siblhmantenimiento/js/BlhCrematocrito/frascosAnalisisCrematocrito.js') }}" ></script>
{% endblock %}

{% block body -%}
     <link href="{{asset('bundles/jquery/jquery.jqGrid-4.5.4/css/ui.jqgrid.css')}}" rel="stylesheet"  type="text/css" media="all"/>  
     <script type="text/javascript" src="{{asset('bundles/jquery/jquery.jqGrid-4.5.4/js/i18n/grid.locale-es.js')}}"></script>
      <script type="text/javascript" src="{{asset('bundles/jquery/jquery.jqGrid-4.5.4/js/jquery.jqGrid.min.js')}}" ></script>
    
    <h1>Listado de frascos para analisis de crematocrito</h1>

    <table id="frascosAnalisisCrematocrito">
        <thead>
            <tr>          
                <th>Código&nbsp;Frasco</th>
                <th>Volumen&nbsp;Recolectado(ml)</th>
                <th>Volumen&nbsp;Recolectado(onz)</th>
                <th>Forma&nbsp;Extracción</th>          
                <th>Observaciones</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.codigoFrascoRecolectado }}</td>
                <td>{{ entity.volumenRecolectado }}</td>
                <td>{{ entity.onzRecolectado }}</td>
                <td>{{ entity.formaExtraccion }}</td>                
                <td>{{ entity.observacionFrascoRecolectado }}</td>
                <td><a href="{{ path('blhcrematocrito_new', { 'id': entity.id }) }}"><font color="blue"><u>Crematocrito</u></font></a></td>              
                </tr>
        {% endfor %}
        </tbody>
    </table>
    <div id='pagerFrascosAnalisisCrematocrito' ></div>

  
    {% endblock %}
