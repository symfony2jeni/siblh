{% extends 'siblhmantenimientoBundle::plantilla.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
        <link href="{{ asset('bundles/siblhmantenimiento/css/form.css') }}" rel="stylesheet" type="text/css" />
 
{% endblock %}
        
{% block javascripts %}

{{parent()}}

<script type="text/javascript" src="{{ asset('bundles/siblhmantenimiento/js/BlhSolicitud/new.js') }}" ></script>
        
{% endblock %}

{% block body -%}
   
    <h1>Registro de Solicitudes de Leche Humana</h1>
    
   {{ form_start(form, {'attr':{ 'id': 'form' } }) }}
   {{ form_errors(form) }}
   <table align = "center" width = "100%">
        <tr><td  align = "right" height=40  ></td></tr>
       <tr>
       <td align = "left" width=210><b>Servicio</b></td>
                <td  align = "left">
                <INPUT width=500 type=text STYLE="text-align:center" name="nombre" disabled="disabled" size=35 readonly="readonly" value= "{{ datos_receptor[0].procedencia}}">
               </td>
               
               <td  align = "left"></td>
               <td  width=250 align = "right" style="visibility:hidden"> 
                {{ form_label(form.idReceptor) }}
                {{ form_errors(form.idReceptor) }}
                {{ form_widget(form.idReceptor) }} </td>
       </tr>
    <tr>
        
 
        <td  align = "left" width=200><b>Nombre del Receptor</b></td>
                <td align = "left">
                <INPUT type=text STYLE="text-align:center" name="nombre" disabled="disabled" size=35 readonly="readonly" value= {{ datos_receptor[0].primer_nombre}}&nbsp;{{ datos_receptor[0].segundo_nombre  }}&nbsp;{{ datos_receptor[0].tercer_nombre  }}&nbsp;{{ datos_receptor[0].primer_apellido }}&nbsp;{{ datos_receptor[0].segundo_apellido }}>
               </td>
               
                <td  align = "left"></td>     
                <td width=100 align = "left"><b>Codigo de Receptor</b></td>    
                <td width=100 align = "right">
                <INPUT type=text STYLE="text-align:center" name="nombre" disabled="disabled" size=20 readonly="readonly" value= " {{ datos_receptor[0].codigoReceptor}} ">
                </td>
                
        </tr>
       
           
        <tr>
        <td  align = "left" ><b>Fecha de Nacimiento</b></td>
                <td  align = "left">
                <INPUT type=text name="nombre" STYLE="text-align:center" disabled="disabled" readonly="readonly" value= " {{ datos_receptor[0].fecha_nacimiento|date('d-m-Y')  }}" >
                </td>
                
                <td  align = "left"></td>
                
                <td width=100 align = "left"><b>Sexo</b></td>
                <td width=100 align = "right">
                <INPUT type=text name="nombre" STYLE="text-align:center" disabled="disabled" readonly="readonly" value=" {{ datos_receptor[0].sexo }} ">
                </td>
        </tr>
         <tr>
        <td align = "left" ><b>Peso al Nacimiento(g)</b></td>
                <td  align = "left">
                <INPUT type=text name="nombre" STYLE="text-align:center" disabled="disabled" readonly="readonly" value=" {{ datos_receptor[0].pesoReceptor}} ">
                </td>
                
                <td  align = "left"></td>
                
                <td width=100 align = "left"><b>Edad Gestacional Nacimiento</b></td>
                 <td width=100 align = "right">
                <INPUT type=text name="nombre" STYLE="text-align:center" disabled="disabled" readonly="readonly" value=" {{ datos_receptor[0].edadGestFur}} ">
                </td>     
        </tr>
        </table>
    
        <table align = "center" width = "100%">
        <tr>
        <td width=162 align = "left"><b>Diagnóstico</b></td>
                <td width=642 align = "left">
                <INPUT type=text name="nombre" STYLE="text-align:center" disabled="disabled" size=113 readonly="readonly" value= "{{ datos_receptor[0].diagnosticoIngreso }}" >
                </td>
        </tr>
        <tr><td align = "right" height=40  ></td></tr>
        </table>
   
        <table align = "center" width = "100%"  >
          
        <tr>
        <td align = "left"><font color="red">*</font>{{ form_label(form.fechaSolicitud, 'Fecha') }}</td>
        <td align = "left" width=200>{{ form_widget(form.fechaSolicitud, {'attr':{ 'readonly': 'true', 'readonly': 'true', 'title': 'Dar clic y seleccionar la fecha de registro' } }) }} </td>
        <td align = "left" ><font color="red">*</font>{{ form_label(form.cuna,'No. de cuna') }}</td>
        <td align = "left" width=150>{{ form_widget(form.cuna, {'attr':{ 'onKeyPress':"return soloNumerosEnteros(event);",'title': 'Por favor ingrese el numero de cuna, entre 1 y 60.' } }) }} </td>
        <td align = "left" ><font color="red">*</font>{{ form_label(form.pesoDia, 'Peso del paciente(g)') }}</td>
         <td align = "left" width=50>{{ form_widget(form.pesoDia, {'attr':{ 'onKeyPress':"return soloNumeros(event);",'title': 'Por favor ingrese el peso del paciente, entre 500 y 5000 g' } }) }} </td>
          </tr>
        <tr><td align = "right" height=10  ></td></tr>
      <tr>
           <td align = "left" ><font color="red">*</font>{{ form_label(form.volumenPorToma,'Volumen por toma (ml)') }}</td>
           <td align = "left">{{ form_widget(form.volumenPorToma, {'attr':{ 'onKeyPress':"return soloNumeros(event);",'title': 'Por favor ingrese el volumen de cada toma, entre 5 y 60 ml' } }) }} </td>
     
        <td align = "left"><font color="red">*</font>{{ form_label(form.tomaPorDia, 'Tomas por día') }}</td>
        <td align = "left">{{ form_widget(form.tomaPorDia, {'attr':{ 'onKeyPress':"return soloNumerosEnteros(event);",'title': 'Por favor ingrese la tomas por día, entre 3 y 12.' } }) }} </td>
        <td align = "left"><font color="red">*</font>{{ form_label(form.caloriasNecesarias,'Calorías necesarias') }}</td>
        <td align = "left">{{ form_widget(form.caloriasNecesarias) }} </td>
       
        </tr>
         <tr><td align = "right" height=10  ></td></tr>
        <tr>
        <td  align = "left"><font color="red">*</font>{{ form_label(form.acidezNecesaria,'Acidez Dornic') }}</td>
        <td align = "left">{{ form_widget(form.acidezNecesaria) }} </td>
        
        <td align = "left"><font color="red">*</font>{{ form_label(form.volumenPorDia,'Volumen total por día (ml)') }}</td>

        <td align = "left">{{ form_widget(form.volumenPorDia, {'attr':{ 'readonly': 'true'} }) }} </td>

        <td align = "left"><font color="red" >*</font><b><font face="Verdana,Arial,Helvetica,sans-serif" ><i>Responsable</i></font></b></td>
        <td align = "left"> 
            <select name="responsable" id = "responsable" > 
        <option value= ""></option>
        {% for responsable in responsable%}        
        <option value= "{{ responsable.nombre }}">{{ responsable.nombre }} </option>
          {% endfor %}</select> </td>       </tr>
         
        <tr style="visibility:hidden">
        <td align = "left">{{ form_label(form.responsable) }}</td>
        <td align = "left">{{ form_widget(form.responsable,  { 'attr': {'size': '25'} }) }} </td>                         

        <td align = "right" style="visibility:hidden">{{ form_label(form.estado) }}</td>
        <td style="visibility:hidden">{{ form_widget(form.estado, {'attr':{ 'value' : 'Pendiente' }}) }} </td>
        
        </tr>
        <tr><td  align = "right" height=30  ></td></tr>
        </table>
    
        <table align = "center" width = "100%">
            <td width=135 align = 'left'  ><font color="red">* Campos requeridos</font></td>
        <tr>           
             <td width=900 align = 'center' ><input type='submit' id="boton"   value="Guardar"/><input id = "boton1" type="button" value="Regresar" onClick=' window.location.href="{{ path('_NewSolicitudes' )}}"'></td>              
          </tr>
           </table>
           {{ form_end(form) }}
          
           
 
{% endblock %}