{% extends 'siblhmantenimientoBundle::plantilla.html.twig' %}



{% block stylesheets %}
  {{ parent() }}
	<link href="{{ asset('bundles/siblhmantenimiento/css/form.css') }}" rel="stylesheet" type="text/css" />
        
{% endblock %}
        
 {% block javascripts %}   
{{parent()}}
<script type="text/javascript" src="{{ asset('bundles/siblhmantenimiento/js/BlhSeguimientoReceptor/new.js') }}" ></script>

{% endblock %}

{% block body -%}
    <h1>Registro de Seguimiento de Receptores</h1>
    
     
                {{ form_start(form) }}
                {{ form_errors(form) }}
   <table align = "center" width = "100%">
        <tr><td colspan=2 align = "right" height=40  ></td></tr>
         <tr>
             <td colspan = "2" align = "right"><b>Nombre del Receptor</b></td>
                <td colspan = "5" align = "left">
                <INPUT type=text STYLE="text-align:center" name="nombre" disabled="disabled" size=35 readonly="readonly" value= {{ datos_receptor[0].primer_nombre}}&nbsp;{{ datos_receptor[0].segundo_nombre  }}&nbsp;{{ datos_receptor[0].tercer_nombre  }}&nbsp;{{ datos_receptor[0].primer_apellido }}&nbsp;{{ datos_receptor[0].segundo_apellido }}>
               </td>  
             
                <td colspan="7" align = "right" style="visibility:hidden"> 
                {{ form_label(form.idReceptor) }}
                {{ form_errors(form.idReceptor) }}
                {{ form_widget(form.idReceptor) }} </td>
                <td colspan = "2" align = "right" ><b>Codigo Receptor</b></td>
                <td width=150 align = "right">
                <INPUT type=text STYLE="text-align:center" name="nombre" disabled="disabled" size=20 readonly="readonly" value= " {{ datos_receptor[0].codigoReceptor}} ">
                </td>          
        </tr>     
      <tr><td colspan=2 align = "right" height=40  ></td></tr>
        </table>
    
        
   
        <table align = "center" width = "100%" >
          
        <tr>
        <td height=10 align = "right"><font color="red">*</font>  
                
                {{ form_label(form.fechaSeguimiento, 'Fecha') }}</td>
               <td height=10 align="left"> {{ form_widget(form.fechaSeguimiento, {'attr':{ 'readonly': 'true', 'title': 'Dar clic y seleccionar la fecha de seguimiento' } }) }} </td>
        <td height=10 align = "right"  ><font color="red" >*</font>  
        {{ form_label(form.semana) }}</td>
        <td height=10 align="left">{{ form_widget(form.semana, { 'attr': {'title': 'Por favor ingrese la semana de seguimiento, ejemplo: 1, 2, 3, etc.'} }) }} </td>
        <td colspan="3" align = "right" ><font color="red">*</font>                  
                {{ form_label(form.pcSeguimiento,'Perímetro cefálico(cm)') }}
                {{ form_errors(form.pcSeguimiento) }}
                {{ form_widget(form.pcSeguimiento,  { 'attr': {'title': 'Por favor ingrese el perímetro cefálico, entre 20 y 40 cm'} }) }} </td>
        </tr>
        <tr><td colspan=2 align = "right" height=10  ></td></tr>
      <tr>
            <td height=10 align = "right" ><font color="red" >*</font>                  
                {{ form_label(form.pesoSeguimiento, 'Peso(g)') }}</td>
                <td height=10 align="left">{{ form_widget(form.pesoSeguimiento, { 'attr': {'title': 'Por favor ingrese el peso, entre 400 y 2500 g'} }) }} </td>       
                <td height=10 align = "right"><font color="red">*</font>                  
                {{ form_label(form.gananciaDiaPeso, 'Ganancia de peso por día(g)') }}</td>
                <td height=10 align="left">{{ form_widget(form.gananciaDiaPeso,{ 'attr': {'title': 'Por favor ingrese la ganancia de peso, entre 0 y 100 g'} }) }} </td>       
                <td colspan="3" align = "right"  ><font color="red">*</font>                  
                {{ form_label(form.tallaReceptor,'Talla(cm)') }}
                {{ form_errors(form.tallaReceptor) }}
                {{ form_widget(form.tallaReceptor,{ 'attr': {'title': 'Por favor ingrese la talla, entre 30 y 60 cm'} }) }} </td></tr>
        <tr><td colspan=2 align = "right" height=10  ></td></tr>
      <tr>
        <td height=10 align = "right" ><font color="red">*</font>  
        {{ form_label(form.gananciaDiaTalla,'Ganancia de talla por día(cm)') }}</td>
        <td height=10 align="left">{{ form_widget(form.gananciaDiaTalla, { 'attr': {'title': 'Por favor ingrese la ganancia de talla, entre 0 y 10 cm'} }) }} </td> 
          
        <td height=10 align = "right"  ><font color="red">*</font>  
        {{ form_label(form.complicaciones) }}</td>
        <td height=10  align="left">{{ form_widget(form.complicaciones) }} </td>
        <td colspan=2 align = "right" height=40  ></td></tr>
        <tr><td colspan=2 align = "right" height=40  ></td></tr>
        </table>
        <table align = "center" width = "100%" >
        <tr>
            <td width=172 align = 'left'  ><font color="red">* Campos requeridos</font></td>
            <td width=900 align = 'center'><input type="submit" id='boton' title='Guardar Seguimiento de Receptor' value="GUARDAR"/>{#<input type='reset' id='boton' title='Cancelar' value='Cancelar'/>#}</td>
        </tr>    
       
        
        </table>

  {{ form_end(form) }}     
   
{% endblock %}
