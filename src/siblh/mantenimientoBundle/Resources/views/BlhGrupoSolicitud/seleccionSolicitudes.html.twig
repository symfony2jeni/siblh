{% extends 'siblhmantenimientoBundle::plantilla.html.twig' %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{ asset('bundles/siblhmantenimiento/js/BlhGrupoSolicitud/seleccionSolicitudes.js') }}" ></script>
{% endblock %}

{% block body -%}
    
 <link href="{{asset('bundles/jquery/jquery.jqGrid-4.5.4/css/ui.jqgrid.css')}}" rel="stylesheet"  type="text/css" media="all"/>  
     <script type="text/javascript" src="{{asset('bundles/jquery/jquery.jqGrid-4.5.4/js/i18n/grid.locale-es.js')}}"></script>
      <script type="text/javascript" src="{{asset('bundles/jquery/jquery.jqGrid-4.5.4/js/jquery.jqGrid.min.js')}}" ></script>     
    
<h1>Listado de Solicitudes para agrupar</h1>
<FORM method="POST" action="{{path("blhagruparsolicitudes")}}" >
    <div align=center>
<table id="Multiselect">

<thead>
            <tr>
                <th>id</th>
                <th>Codigo</th>
                <th>Fecha</th>
                <th>Receptor</th>
                <th>Acidez</th>
                <th>Calorias</th>
                <th>Volumen&nbsp;por&nbsp;toma</th>
                <th>Tomas&nbsp;por&nbsp;dia</th>
            </tr>
            
        </thead>
        <tbody>
             {% for solicitud in solicitudes%}
            
              <tr>
                <td>{{ solicitud.id }}</td>
                <td>{{ solicitud.codigoSolicitud }}</td>
                <td>{{ solicitud.fechaSolicitud|date('d-m-Y') }}</td>
                <td>{{ solicitud.nombre1 }}&nbsp;{{ solicitud.nombre2 }}&nbsp;{{ solicitud.nombre3 }}&nbsp;{{ solicitud.apellido1 }}&nbsp;{{ solicitud.apellido2 }}</td>  
                <td>{{ solicitud.acidezNecesaria }}</td>
                <td>{{ solicitud.caloriasNecesarias }}</td>
                <td>{{ solicitud.volumenPorToma }}</td>
                <td>{{ solicitud.tomaPorDia }}</td>                
                {% endfor %}
                  </tbody>
                  </table>
            </div>
<div id="pagerMultiselect"></div>
{#<a href="javascript:void(0)" id="agrupar" >Get Selected id's</a>#}


   <table align = "center" >     
       <tr>
        <td style="visibility:hidden">
        <INPUT  name="var" id="var" type=text size=10 ></td></tr>
       <tr><td><INPUT  id='agrupar' name="agrupar" type=submit  value="Agrupar"></td></tr>
</table>
</FORM>
            
{% endblock %}
