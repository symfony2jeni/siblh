{% extends 'siblhmantenimientoBundle::plantilla.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
        <link href="{{ asset('bundles/siblhmantenimiento/css/form.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{ asset('bundles/siblhmantenimiento/js/BlhBancoDeLeche/edit.js') }}" ></script>
{% endblock %}



{% block body -%}
    <h1>Editar Banco de Leche</h1>
    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}
    
   <table  align = "center">     
   <tr><td  align = "left" height=10  ></td></tr>
   <tr><td align='left'><font color="red">*</font>{{ form_label(edit_form.codigoBancoDeLeche) }}</td><td align='left'>{{ form_widget(edit_form.codigoBancoDeLeche, {'attr':{'readonly': 'true'} }) }}</td></tr>
   <tr><td  align = "left" height=10  ></td></tr>
   <tr><td align='left'><font color="red">*</font>{{ form_label(edit_form.estadoBanco) }}</td><td align='left'>{{ form_widget(edit_form.estadoBanco) }}</td></tr>
   <tr><td  align = "left" height=10  ></td></tr>
   <tr><td align='left'><font color="red">*</font>{{ form_label(edit_form.idEstablecimiento, 'Establecimiento') }}</td><td align='left'>{{ form_widget(edit_form.idEstablecimiento) }}</td></tr>
   <tr><td  align = "left" height=10  ></td></tr>
   <tr><td align = "left"><font color="red" size = "2" face = "Comic Sans MS">* Campos requeridos</font></td> </tr>     
   <tr><td colspan = '2' align = 'center'>  <input id= "button" type="submit" value="Actualizar"/>
   <td style="visibility:hidden">{{ form_widget(edit_form.usuario, {'attr':{ 'value' : user_ID }}) }} </td>
   <input id = "boton" type="button" value="Regresar" onClick=' window.location.href="{{ path('blhbancodeleche') }}" '></td></tr>

    
 </table>
 {{ form_end(edit_form) }}
    
 {% endblock %}
