{% extends 'siblhmantenimientoBundle::plantilla.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
        <link href="{{ asset('bundles/siblhmantenimiento/css/form.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{ asset('bundles/siblhmantenimiento/js/BlhFrascoRecolectado/edit.js') }}" ></script>

{% endblock %}
{% block body -%}
    <h1>Editar Frasco Recolectado</h1>
    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}
    
<table   align = "center" >
          
       
        <tr><td colspan=2 align = "left" height=10  ></td></tr>
        <tr><td align='left' ><font color="red">*</font>{{ form_label(edit_form.volumenRecolectado,'Volumen recolectado') }}</td><td align='left'>{{ form_widget(edit_form.volumenRecolectado,  { 'attr': {'title': 'Digite el volumen en ml de', 'onKeyPress':"return soloNumeros(event);"} }) }}</td></tr>
    <tr><td colspan=2 align = "left" height=10  ></td></tr>
    <tr><td align='left' ><font color="red">*</font>{{ form_label(edit_form.formaExtraccion,'Forma extraccion') }}</td><td align='left'>{{ form_widget(edit_form.formaExtraccion) }}</td></tr>
    <tr><td colspan=2 align = "left" height=10  ></td></tr>
    <tr><td align='left' >{{ form_label(edit_form.onzRecolectado,'Onzas recolectadas') }}</td><td align='left'>{{ form_widget(edit_form.onzRecolectado, {'attr':{'readonly': 'true', 'title':'Dar clic para obtener resultado'  } }) }}</td></tr>
    <tr><td colspan=2 align = "left" height=10  ></td></tr>
    <tr><td align='left' >{{ form_label(edit_form.observacionFrascoRecolectado,'Observaciones') }}</td><td align='left'>{{ form_widget(edit_form.observacionFrascoRecolectado,  { 'attr': {'size': '50'} }) }}</td></tr>
    <tr><td colspan=2 align = "left" height=10  ></td></tr>
    <tr style="visibility:hidden"><td align='left' ><font color="red">*</font>{{ form_label(edit_form.idEstado,'Estado') }}</td><td align='left'>{{ form_widget(edit_form.idEstado) }}</td></tr>
    <tr style="visibility:hidden"><td align='right'><font color="red">*</font>{{ form_label(edit_form.idDonacion) }}</td><td align='left'>{{ form_widget(edit_form.idDonacion) }}</td></tr>
    <tr style="visibility:hidden"><td align='right'><font color="red">*</font>{{ form_label(edit_form.idDonante) }}</td><td align='left'>{{ form_widget(edit_form.idDonante) }}</td></tr>

       <tr>
            <td align = "left"><font color="red" size = "2" face = "Comic Sans MS">* Campos requeridos</font></td> </tr>     

     
      
             <tr><td colspan = '3' align = 'center'>  <input id= "button" type="submit" value="Actualizar"/>
<input id = "boton" type="button" value="Regresar" onClick=' window.location.href="{{ path('blhfrascorecolectado') }}"'/></td></tr>
    
 </table>
