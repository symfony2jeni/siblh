{% extends 'siblhmantenimientoBundle::plantilla.html.twig' %}

{% block javascripts %}
    {{parent()}}
   <script type="text/javascript" src="{{ asset('bundles/siblhmantenimiento/js/BlhFrascoRecolectado/index.js') }}" ></script>
{% endblock %}
   
{% block body -%}
 <link href="{{asset('bundles/jquery/jquery.jqGrid-4.5.4/css/ui.jqgrid.css')}}" rel="stylesheet"  type="text/css" media="all"/>  
 
 <script type="text/javascript" src="{{asset('bundles/jquery/jquery.jqGrid-4.5.4/js/i18n/grid.locale-es.js')}}"></script>
      <script type="text/javascript" src="{{asset('bundles/jquery/jquery.jqGrid-4.5.4/js/jquery.jqGrid.min.js')}}" ></script> 
 
    <h1>Frascos Recolectados</h1>

   <table id = "listado_frascos">
        <thead>
            <tr>
                <th>Donante</th>
                <th>Nombre</th>
                <th>Frasco</th>
                <th>Volumen&nbsp;Recolectado</th>
                <th>Onzas&nbsp;Recolectadas</th>
                <th>Forma&nbsp;de&nbsp;Extraccion</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in frascos %}
            <tr>
                <td>{{ entity.codigo_donante }}</td>
                <td>{{ entity.nombre1 }} {{ entity.nombre2 }} {{ entity.apellido1 }} {{ entity.apellido2 }}</td>
                <td>{{ entity.codigoFrascoRecolectado }}</td>
                <td>{{ entity.volumenRecolectado|number_format(2, '.', ',') }}</td>
                <td>{{ entity.onzRecolectado|number_format(2, '.', ',') }}</td>
                <td>{{ entity.formaExtraccion }}</td>
                <td><a href="{{ path('blhfrascorecolectado_edit', { 'id': entity.id }) }}"><font color="blue"><u>Editar</u></font></a></td></tr>
        {% endfor %}
        </tbody>
    </table>
<div id='pagerfrascos' ></div>
        
    {% endblock %}
