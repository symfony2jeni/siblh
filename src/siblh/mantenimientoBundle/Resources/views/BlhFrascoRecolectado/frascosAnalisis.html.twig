{% extends 'siblhmantenimientoBundle::plantilla.html.twig' %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{ asset('bundles/siblhmantenimiento/js/BlhSeguimientoReceptor/frascosAnalisis.js') }}" ></script>
{% endblock %}

{% block body -%}
    <h1>Listado de frascos para analisis fisico-quimico</h1>

    <table class="records_list">
        <thead>
            <tr>
             
                <th>Codigo&nbsp;Frasco</th>
                <th>Volumen&nbsp;Recolectado(ml)</th>
                <th>Volumen&nbsp;Recolectado(onz)</th>
                <th>Forma&nbsp;Extracción</th>          
                <th>Observaciones</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
               
                <td>{{ entity.codigoFrascoRecolectado }}</td>
                <td>{{ entity.volumenRecolectado }}</td>
                <td>{{ entity.onzRecolectado }}</td>
                <td>{{ entity.formaExtraccion }}</td>                
                <td>{{ entity.observacionFrascoRecolectado }}</td>
                <td><a href="{{ path('blhanalisissensorial_new', { 'id': entity.id }) }}">Analisis Sensorial</a><br>
                    <a href="{{ path('blhacidez_new', { 'id': entity.id }) }}">Acidez</a><br>
                    <a href="{{ path('blhcrematocrito_new', { 'id': entity.id }) }}">Crematocrito</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
    {% endblock %}
