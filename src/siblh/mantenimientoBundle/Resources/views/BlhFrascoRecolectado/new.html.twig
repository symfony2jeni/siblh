        <INPUT type=text disabled="disabled" size=30 readonly="readonly" value=" {{ datos_donacion[0].fechaDonacion|date('d-m-Y') }} "></td>
       
       
       </tr>  
    <tr>
        <td>Nombre de la Donante</td>
        <td>
        <INPUT type=text name="nombre" disabled="disabled" size=30 readonly="readonly" value= "{{ datos_donacion[0].nombre1}}&nbsp;{{ datos_donacion[0].nombre2  }}&nbsp;{{ datos_donacion[0].apellido1 }}&nbsp;{{ datos_donacion[0].apellido2 }}"></td>
       
    </tr>        
    </table>
          
    </FORM>      
    
    
 {#   {{ form(form) }}  #}
    
