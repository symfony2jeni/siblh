    <table align = "center">
        <tr style="visibility:hidden">
    <td> {{ form_label(form.idDonacion) }}</td>
    <td> {{ form_widget(form.idDonacion) }}</td>
    <td> {{ form_label(form.idDonante) }}</td>
       
    <td> {{ form_widget(form.idDonante) }}</td>    
        </tr>
