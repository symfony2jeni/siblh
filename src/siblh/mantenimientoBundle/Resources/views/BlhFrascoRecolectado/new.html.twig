    <td><font color="red" >*</font>
        {{ form_label(form.volumenRecolectado, 'Volumen en ml') }}</td>
    <td>{{ form_widget(form.volumenRecolectado,  { 'attr': {'title': 'Volumen entre 1 y 500 ml', 'onKeyPress':"return soloNumeros(event);"} }) }}</td>
    <td>{{ form_label(form.onzRecolectado, 'Volumen en onz') }}</td>
    <td>{{ form_widget(form.onzRecolectado, {'attr':{'readonly': 'true', 'title':'Dar clic para obtener resultado' } }) }}</td>    
        </tr>
        <tr><td height=10  ></td></tr>     
      <tr>
    <td><font color="red" >*</font>
        {{ form_label(form.formaExtraccion, 'Forma de extraccion') }}</td>
    <td>{{ form_widget(form.formaExtraccion) }}</td>
    <td align = "center"><font color="red" >*</font>
        {{ form_label(form.observacionFrascoRecolectado, 'Observaciones') }}</td>
    <td>{{ form_widget(form.observacionFrascoRecolectado,  { 'attr': {'size': '50'} }) }}</td>    
        </tr>   
        <tr><td height=10  ></td></tr>     
        <tr>
    <td style="visibility:hidden">
        {{ form_label(form.idEstado) }}</td>
        <td style="visibility:hidden">
        {{ form_widget(form.idEstado) }}</td>
      
        </tr>   
        <tr>
            <td align = "left"><font color="red" size = "2" face = "Comic Sans MS">* Campos requeridos</font></td> </tr>     
            
        <tr><td align = "center" colspan = 4><input id = "button"  type="submit"  value="Guardar"/>
            <input id = "boton1" type="button" value="Regresar" onClick=' window.location.href="{{ path('_NewFrascoRecolectado') }}" '></td></tr>

    </table> 
{{ form_end(form) }}
